                    "define":{
                        "type":"bool",
                        "mapping":{
                            "0":"normal",
                            "1":"fault"
                        }
                    }
                },
                {
                    "id":"message",
                    "name":"Message",
                    "desc":"Some extra message",
                    "define":{
                        "type":"string",
                        "min":"0",
                        "max":"64"
                    }
                }
            ]
        },
        {
