            "required":false,
            "params":[
                {
                    "id":"voltage",
                    "name":"Voltage",
                    "desc":"Current voltage",
                    "define":{
                        "type":"float",
                        "unit":"V",
                        "step":"1",
                        "min":"0.0",
                        "max":"24.0",
                        "start":"1"
                    }
                }
            ]
        },
        {
